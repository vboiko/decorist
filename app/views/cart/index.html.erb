<div class="row-fluid text-center">
	<div class="col-md-4">
		<span class="round">1</span>
		<span>View Cart</span>
	</div>
	<div class="col-md-4">
	<%= link_to payment_path do %>
		<span class="round">2</span>
	<% end %>
		<span>Payment</span>
	</div>
	<div class="col-md-4">
	<%= link_to info_path do %>
		<span class="round">3</span>
	<% end %>
		<span>Additional info</span>
	</div>
</div>

	<div class="row-fluid">
		<section class="col-sm-8">
			<header><i>Your Shopping Cart</i>&nbsp;&nbsp;<span><a href="#" class="happiness">CONTINUE SHOPPING</a></span></header>
			<table class="table">
				<thead>
					<tr>
						<th>Item</th>
						<th>Quantity</th>
						<th>Price</th>
						<th>Change</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td><%= image_tag('2.png') %></td>
						<td><span class="glyphicon glyphicon-plus-sign"></span><span class="amount">1</span><span class="glyphicon glyphicon-minus-sign"></span></td>
						<td></td>
						<td><span class="glyphicon glyphicon-remove-sign"></span><span class="remove">Remove</span></td>

					</tr>
				</tbody>
			</table>
			<div id="stats">
				<table class="table borderless">
					<tbody class="pull-right">
						<tr>
							<td>SUBTOTAL</td><td>$69.00</td>
						</tr>
						<tr>
							<td>TAX</td><td>$0.00</td>
						</tr>
						<tr>
							<td>SHIPPING</td><td>$0.00</td>
						</tr>
						<tr><td>TOTAL</td><td>$69.00</td></tr>
					</tbody>
				</table>
			</div>
			<p class="pull-right">
			  <a href="#" class="happiness" data-toggle="modal" data-target="#myModal">HAPPINESS GARANTEE!</a>
			  <%= link_to payment_path do %>
			  <button type="button" class="btn btn-primary button">NEXT-PAYMENT</button>
			  <% end %>
			</p>
			<!-- Modal -->
					<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
					  <div class="modal-dialog">
					    <div class="modal-content">
					      <div class="modal-header">
					        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
					      </div>
					      <div class="modal-body">
					      </div>
					      <div class="modal-footer">
					      </div>
					    </div>
					  </div>
					</div>
					
		</section>
		<aside class="col-sm-4">
			 <%= image_tag('image-1.png') %>
		</aside>
	</div>
