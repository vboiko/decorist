<div class="row-fluid text-center">
	<div class="col-md-4">
	<%= link_to '1', cart_path, class: "round" %>
		<span>View Cart</span>
	</div>
	<div class="col-md-4">
		<span class="round">2</span>
		<span>Payment</span>
	</div>
	<div class="col-md-4">
	<%= link_to '3', info_path, class: "round" %>
		<span>Additional info</span>
	</div>
</div>

<div class="row-fluid">
	<section class="col-sm-8">
		<legend class="italic-header"><i>Your Billing Information</i></legend>
		<form method="post" role="form" class="form-group" id="form-font">
		<div id="full-name">
			<div class="name">
			<label class="control-label">FIRST NAME</label>
			<input type="text" class="form-control" required>
			</div>
			<div class="name">
			<label class="control-label">LAST NAME</label>
			<input type="text" class="form-control" required>
			</div>
		</div>

		<div id="zip-code">
			<label class="control-label">ZIP CODE</label>
			<input type="number" class="form-control" required>
		</div>

		<div id="card-number">
			<label class="control-label">CARD NUMBER</label>
			<input type="number" class="form-control" required>
		</div>

		<div id="exp-date">
		<div>
		    <label class="control-label">Expiration Date</label>
		    <div id="date-option">
		      <SELECT>
		        <OPTION VALUE="" SELECTED>01</OPTION>
		        <OPTION VALUE="02">02</OPTION>
		        <OPTION VALUE="03">03</OPTION>
		        <OPTION VALUE="04">04</OPTION>
		        <OPTION VALUE="05">05</OPTION>
		        <OPTION VALUE="06">06</OPTION>
		        <OPTION VALUE="07">07</OPTION>
		        <OPTION VALUE="08">08</OPTION>
		        <OPTION VALUE="09">09</OPTION>
		        <OPTION VALUE="10">10</OPTION>
		        <OPTION VALUE="11">11</OPTION>
		        <OPTION VALUE="12">12</OPTION>
		      </SELECT>
		      <SELECT>
		        <OPTION VALUE="" SELECTED>2014</OPTION>
		        <OPTION VALUE="15">2015</OPTION>
		        <OPTION VALUE="16">2016</OPTION>
		        <OPTION VALUE="17">2017</OPTION>
		        <OPTION VALUE="18">2018</OPTION>
		        <OPTION VALUE="19">2019</OPTION>
		        <OPTION VALUE="20">2020</OPTION>
		      </SELECT>
		      </div>
		 </div>
		 <div id="cvv">
			    <label class="control-label">CVV</label>
			    <input type="text" class="form-control" required>
		  </div>
		  </div>
		  <br>
		  <div id="checkbox">
		  <input id="save-card" type="checkbox" checked="checked"><label for="save-card">SAVE CARD FOR FUTURE USE</label>
		  </div>
		<hr>
		<p class="pull-right">
		  <a href="#" class="happiness" data-toggle="modal" data-target="#myModal">HAPPINESS GARANTEE!</a>
		  <%= link_to info_path do %>
		  <button type="submit" type="button" class="btn btn-primary button">PLACE ORDER</button>
		  <% end %>
		</p>
		</form>
		</section>
		<aside class="col-sm-4">
			 <%= image_tag('image-1.png') %>
		</aside>
	</div>